@using EntityLayer.Concrete
@model List<Message2>
@{
    Layout = "WriterLayout";
}
<h1>Giden Kutusu</h1>
<br/>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td>
                <a asp-action="MessageDetails" asp-controller="Message" asp-route-id="@item.MessageId" class="btn btn-warning">Mesajı Aç</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-action="SendMessage" asp-controller="Message">Yeni Mesaj Oluştur</a>