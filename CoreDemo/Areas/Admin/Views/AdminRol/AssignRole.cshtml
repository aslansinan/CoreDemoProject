@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "AdminLayout";
}
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId"/>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists">
            <label class="form-check-label" asp-for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <br/>
    <button class="btn btn-info">Değişiklikleri Kaydet</button>
</form>
<div>
    <br/>
    <a href="/Admin/AdminRol/UserRoleList/" class="btn btn-primary">Kullanıcı Listesi</a>
</div>